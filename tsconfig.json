{
  "compilerOptions": {
    "outDir": "dist_server",
    "types": ["reflect-metadata"],
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "server/**/*.*"
  ],
  "exclude": [
    "node_modules"
  ],
}