{
  "name": "alakajam",
  "version": "2.0.0-dev",
  "description": "Website powering the Alakajam! game making community",
  "license": "MIT",
  "main": "dist_server/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "start": "node dist_server/index.js",
    "start:watch": "ts-node-dev server/index.ts",
    "debug": "node --inspect --require ts-node/register server/index.ts",
    "lint": "tslint --project tsconfig.json --fix",
    "docs": "typedoc --out dist_docs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alakajam-team/alakajam.git"
  },
  "bugs": {
    "url": "https://github.com/alakajam-team/alakajam/issues"
  },
  "dependencies": {
    "express": "^4.16.3",
    "express-nunjucks": "^2.2.3",
    "express-promise-router": "^3.0.2",
    "knex": "^0.14.6",
    "moment": "^2.22.1",
    "nunjucks": "^3.1.2",
    "optional-require": "^1.0.0",
    "pg": "^7.4.3",
    "reflect-metadata": "^0.1.12",
    "sqlite3": "^4.0.2",
    "typeorm": "^0.2.7",
    "winston": "^2.4.4"
  },
  "optionalDependencies": {},
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/express-promise-router": "^2.0.0",
    "@types/node": "^10.9.4",
    "@types/nunjucks": "^3.0.0",
    "@types/winston": "^2.3.9",
    "husky": "^1.0.0-rc.14",
    "lint-staged": "^7.2.2",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3"
  },
  "browserslist": [
    ">1%",
    "last 2 versions",
    "IE >= 9"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  }
}
